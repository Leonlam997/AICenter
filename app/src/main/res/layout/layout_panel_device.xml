<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/button_width"
        android:layout_height="match_parent"
        android:background="@color/device_background"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_panel_switch"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/button_panel_style"
            android:text="@string/text_panel_switch"
            android:textColor="@color/panel_button_style"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/btn_panel_curtain"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/button_panel_style"
            android:text="@string/text_panel_curtain"
            android:textColor="@color/panel_button_style"
            android:textSize="@dimen/button_text_size" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/list_line_color"
        android:dividerHeight="1dp"
        android:background="@color/background_color" />
</LinearLayout>