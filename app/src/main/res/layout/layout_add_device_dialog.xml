<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_background">

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:background="@color/device_background"
        android:src="@drawable/button_close_style"
        android:contentDescription="@string/text_close" />

    <include
        android:id="@+id/ll_step2"
        layout="@layout/layout_add_device_step2"
        android:visibility="invisible" />

    <include
        android:id="@+id/ll_step3"
        layout="@layout/layout_add_device_step3"
        android:visibility="invisible" />

    <include
        android:id="@+id/ll_step4"
        layout="@layout/layout_add_device_step4"
        android:visibility="invisible" />

    <include
        android:id="@+id/ll_step1"
        layout="@layout/layout_add_device_step1" />
</RelativeLayout>