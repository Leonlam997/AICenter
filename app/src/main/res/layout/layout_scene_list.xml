<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/tv_add_scene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:drawablePadding="5dp"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/text_add_scene"
        android:textColor="@color/text_button_style"
        android:textSize="@dimen/add_device_text_size"
        app:drawableStartCompat="@drawable/button_add_style" />

    <TextView
        android:id="@+id/tv_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@id/tv_add_scene"
        android:clickable="true"
        android:drawablePadding="5dp"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/text_modify_scene"
        android:textColor="@color/text_button_style"
        android:textSize="@dimen/add_device_text_size"
        app:drawableStartCompat="@drawable/button_modify_style"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:drawablePadding="5dp"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/text_save"
        android:textColor="@color/text_button_style"
        android:textSize="@dimen/add_device_text_size"
        app:drawableStartCompat="@drawable/button_save_style" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@id/tv_save"
        android:clickable="true"
        android:drawablePadding="5dp"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/text_cancel_change"
        android:textColor="@color/text_button_style"
        android:textSize="@dimen/add_device_text_size"
        app:drawableStartCompat="@drawable/button_cancel_change_style"
        tools:ignore="RelativeOverlap" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_scenes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tl_scenes"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_scenes"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:background="@color/background_color"
        app:tabGravity="start"
        app:tabIndicatorColor="@color/tab_text_color"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="2dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/tab_text_color"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/tab_unselect_text_color" />

</RelativeLayout>