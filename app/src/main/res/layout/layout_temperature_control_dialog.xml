<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_background">

    <CheckBox
        android:id="@+id/cb_temperature"
        style="@android:style/Widget.DeviceDefault.Light.CompoundButton.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:visibility="invisible" />

    <CheckBox
        android:id="@+id/cb_fan"
        style="@android:style/Widget.DeviceDefault.Light.CompoundButton.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="20dp"
        android:visibility="invisible" />

    <CheckBox
        android:id="@+id/cb_mode"
        style="@android:style/Widget.DeviceDefault.Light.CompoundButton.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="20dp"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/btn_increase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="150dp"
        android:background="@color/device_background"
        android:src="@drawable/button_temperature_increase_style" />

    <ImageButton
        android:id="@+id/btn_decrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="90dp"
        android:background="@color/device_background"
        android:src="@drawable/button_temperature_decrease_style" />

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:background="@color/device_background"
        android:contentDescription="@string/text_close"
        android:src="@drawable/button_close_style" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_fan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_switch"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/device_on_background"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="@string/text_temperature_off"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/common_text_size"
            app:drawableTopCompat="@drawable/button_temperature_switch_style" />

        <TextView
            android:id="@+id/tv_cool"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:background="@drawable/device_on_background"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="@string/text_temperature_cool"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/common_text_size"
            app:drawableTopCompat="@drawable/button_temperature_cool_style" />

        <TextView
            android:id="@+id/tv_fan"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:background="@drawable/device_on_background"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="@string/text_temperature_fan"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/common_text_size"
            app:drawableTopCompat="@drawable/button_temperature_fan_style" />

        <TextView
            android:id="@+id/tv_hot"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:background="@drawable/device_on_background"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="@string/text_temperature_hot"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/common_text_size"
            app:drawableTopCompat="@drawable/button_temperature_hot_style" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_fan"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_below="@id/tv_temperature"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/temperature_fan_control_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fan_auto"
            android:layout_width="70dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/text_fan_auto"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/common_text_size" />

        <TextView
            android:id="@+id/tv_fan_low"
            android:layout_width="70dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/text_fan_low"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/common_text_size" />

        <TextView
            android:id="@+id/tv_fan_mid"
            android:layout_width="70dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/text_fan_mid"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/common_text_size" />

        <TextView
            android:id="@+id/tv_fan_high"
            android:layout_width="70dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/text_fan_high"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/common_text_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_display_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:drawablePadding="5dp"
        android:text="@string/text_display_home"
        android:textColor="@color/common_text_color"
        android:textSize="@dimen/common_text_size"
        app:drawableLeftCompat="@mipmap/ic_switch_on"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/tv_room_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="@color/common_text_color"
        android:textSize="@dimen/common_text_size"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/tv_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textColor="@color/common_text_color"
        android:textSize="@dimen/text_temperature"
        tools:ignore="RelativeOverlap" />

</RelativeLayout>