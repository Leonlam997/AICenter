<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_shortcut"
    android:layout_width="120dp"
    android:layout_height="158dp"
    android:background="@drawable/common_background">

    <com.leon.aicenter.component.TintImageView
        android:id="@+id/iv_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_offline"
        android:visibility="invisible"
        android:contentDescription="@string/text_offline"/>

    <ImageView
        android:id="@+id/iv_device_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/dev_lamp"
        android:contentDescription="@string/text_device"/>

    <TextView
        android:id="@+id/tv_scene_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/scene_type_background"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="@color/text_off_color"
        android:textSize="@dimen/scene_type_text_size" />

    <TextView
        android:id="@+id/tv_add_shortcut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:drawablePadding="10dp"
        android:text="@string/text_select_device"
        android:textColor="@color/text_button_style"
        android:textSize="@dimen/common_text_size"
        app:drawableTopCompat="@drawable/button_home_add_style" />

    <com.leon.aicenter.component.MarqueeTextView
        android:id="@+id/tv_room_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/tv_detail"
        android:layout_below="@id/tv_device_name"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="2dp"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textColor="@color/text_off_color"
        android:textSize="@dimen/common_text_size" />

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_device_name"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/text_off_color"
        android:textSize="@dimen/common_text_size" />

    <com.leon.aicenter.component.MarqueeTextView
        android:id="@+id/tv_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textColor="@color/common_text_color"
        android:textSize="@dimen/device_name_text_size" />

    <com.leon.aicenter.component.MarqueeTextView
        android:id="@+id/tv_scene_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:gravity="center"
        android:textColor="@color/common_text_color"
        android:textSize="@dimen/device_name_text_size" />

    <com.leon.aicenter.component.MarqueeTextView
        android:id="@+id/tv_scene_room_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_scene_name"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textColor="@color/text_off_color"
        android:textSize="@dimen/common_text_size" />

</RelativeLayout>