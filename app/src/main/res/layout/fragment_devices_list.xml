<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <com.leon.aicenter.component.DragGridView
        android:id="@+id/grid_device"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_no_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/text_off_color"
        android:gravity="center"
        android:textSize="@dimen/common_text_size"
        android:drawablePadding="20dp"
        android:text="@string/text_no_device"
        app:drawableTopCompat="@mipmap/pic_no_device" />
</RelativeLayout>
